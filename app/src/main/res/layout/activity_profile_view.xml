<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileViewActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="94dp"
        app:srcCompat="@drawable/profile_image"></ImageView>

    <ImageView
        android:id="@+id/nidfront"
        android:layout_width="200dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_toEndOf="@+id/profile_image"
        app:srcCompat="@drawable/nidfront" />

    <ImageView
        android:id="@+id/nidback"
        android:layout_width="184dp"
        android:layout_height="112dp"
        android:layout_below="@+id/nidfront"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="41dp"
        android:layout_toEndOf="@+id/profile_image"
        app:srcCompat="@drawable/nidback" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Enter Full Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/nid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter NID number"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/birthdate"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:layout_below="@+id/nid"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Enter Birthdate"
        android:inputType="date" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthdate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="45dp"
        android:enabled="true"
        android:text="Save and Proceed" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nidback"
        android:layout_marginStart="83dp"
        android:layout_marginTop="308dp"
        android:layout_toEndOf="@+id/birthdate"
        android:text="AI has matched Nid number and selfy with NID data" />


</RelativeLayout>